import \saffire\io;
foo = hash[["a":1,"b":2,"c":3]];
foreach (foo as k,v,meta)  {
    if (meta.first) io.print("first\n");
    if (meta.last) io.print("last\n");
    io.print(meta.count," ",meta.index," ",k," ",v,"\n");
}
